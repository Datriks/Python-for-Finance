
import numpy as np
import matplotlib.pyplot as plt
%matplotlib inline
plt.style.use('bmh')
plt.rcParams['figure.figsize'] = (16,6)

rev_m = 200
rev_std = 10
iterations = 250

rev = np.random.normal(rev_m,rev_std,iterations)
rev

plt.plot(rev,c='midnightblue')

cogs = -(rev * np.random.normal(0.4,0.2))

plt.plot(cogs, c='r')

cogs.mean()

cogs.std()

